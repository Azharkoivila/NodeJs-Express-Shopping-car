  <div class="py-3 py-md-5 bg-light">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h4 class="mb-4">Search Result</h4>
                </div>
                {{#if products}}
                {{#each products}}
                <div class="col-md-3">
                    <div class="product-card">
                        <div class="product-card-img">
                            <section>
                          <div class="splide" role="group" aria-label="Splide Basic HTML Example">
                                <div class="splide__track">
                                        <ul class="splide__list">
                                            {{#each this.imgPaths}}
                                            <li class="splide__slide">
                                             <img src="/images/products/{{this}}.jpg" alt="productImages">
                                            </li>
                                            {{/each}}
                                        </ul>
                                </div>
                          </div>
                            </section>
                            <label class="stock bg-success">In Stock</label>
                        </div>
                        <div class="product-card-body">
                            <p class="product-brand">{{this.productBrand}}</p>
                            <h5 class="product-name">
                               <a href="">
                                    {{this.productName}}
                               </a>
                            </h5>
                            <div>
                                <span class="selling-price">{{this.productPrice}}</span>
                                <span class="original-price">{{this.productPrice}}</span>
                            </div>
                            <div class="mt-2">
                                <button  type="button"  onclick="addToCart('{{this._id}}')" class="btn btn1">Add To Cart</button>
                                <a href="" class="btn btn1"> <i class="fa fa-heart"></i> </a>
                                <a href="/viewProduct/{{this._id}}" class="btn btn1"> View </a>
                            </div>
                        </div>
                    </div>
                </div>
 {{/each}}
{{/if}}

 {{#if status}}
<section>
    <div class="modal fade" id="myModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">{{status}}</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
       {{status}}
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        {{!-- <button type="button" class="btn btn-primary">Save changes</button> --}}
      </div>
    </div>
  </div>
</div>
</section>
{{/if}}
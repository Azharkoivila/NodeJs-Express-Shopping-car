<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12 col-md-12 ml-auto">
      <div class="row align-items-center pt-md-5 mt-md-5 mb-5">
        <div class="col-12">
          <div class="card">
            <div class="card-title text-center mt-3">
              <h3>Update Product</h3>
            </div>
            <div class="card-body">
              <form
                action="/admin/update-product/{{result._id}}"
                enctype="multipart/form-data"
                method="post">
                <label for="productName">Product Name:</label>
                <input
                  type="text"
                  class="form-control"
                  id="productName"
                  name="productName"
                  placeholder="Enter Product Name"
                  value="{{result.productName}}"
                  required/>
                <label for="productBrand">Product Brand Name:</label>
                <input
                  type="text"
                  class="form-control"
                  id="productBrand"
                  name="productBrand"
                  placeholder="Enter Product Brand Name"
                  value="{{result.productBrand}}"
                  required/>
                <label for="productPrice">Product Price:</label>
                <input
                  type="float"
                  class="form-control"
                  id="productPrice"
                  name="productPrice"
                  placeholder="Enter Product Price"
                  value="{{result.productPrice}}"
                  required/>

                <input
                  type="file"
                  class="custom-file-input"
                  name="file"
                  id="productImage"
                  accept="image/*"
                  required
                  multiple/>
                  
                <div id="preview-container">
                    {{#each result.imgPaths}}
                  <img src="/images/products/{{this}}.jpg" alt="productImages">
                  {{/each}}
                </div>

                <button
                  class="btn btn-dark mt-5 mx-auto d-block"
                  type="submit"
                >Update Product</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{{#if status}}
<section>
    <div class="modal fade" id="myModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">INFO</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
      Product Added Successfully
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        {{!-- <button type="button" class="btn btn-primary">Save changes</button> --}}
      </div>
    </div>
  </div>
</div>
</section>
{{/if}}